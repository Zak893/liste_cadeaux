{% extends 'base.html.twig' %}

{% block title %}Gift index{% endblock %}

{% block body %}
    <h1>Gift index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Prix</th>
                <th>Image</th>
                <th>Lien</th>
                <th>Associated list</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for gift in gifts %}
            <tr>
                <td>{{ gift.id }}</td>
                <td>{{ gift.name }}</td>
                <td>{{ gift.prix }}</td>
                <td>{{ gift.image }}</td>
                <td>{{ gift.lien }}</td>
                <td><a href="{{ path('app_list_type_show', {'id': gift.listId}) }}">List</a></td>
                <td>
                    <a href="{{ path('app_gift_show', {'id': gift.id}) }}">show</a>
                    <a href="{{ path('app_gift_edit', {'id': gift.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_gift_new') }}">Create new</a>
{% endblock %}
