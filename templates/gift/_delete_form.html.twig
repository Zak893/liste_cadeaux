<form method="post" action="{{ path('app_gift_delete', {'id': gift.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ gift.id) }}">
    <a href="{{ path('app_gift_index') }}" class="btn btn-secondary"><-Back to List</a>
    <a href="{{ path('app_gift_edit', {'id': gift.id}) }}" class="btn btn-warning">Edit</a>
    <button class="btn" style="background-color: red; color: white">Delete</button>
</form>
