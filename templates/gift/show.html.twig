{% block title %}Gift{% endblock %}

{% block body %}
    <h1>Gift</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ gift.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
               <td>{{ gift.name }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ gift.prix }}</td>
