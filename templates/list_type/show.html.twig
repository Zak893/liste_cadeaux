{% extends 'base.html.twig' %}

{% block title %}ListType{% endblock %}

{% block body %}
    <h1>ListType</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ list_type.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ list_type.Titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ list_type.Description }}</td>
            </tr>
            <tr>
                <img src="{{ list_type.Couverture }}">
            </tr>
            <tr>
                <th>Theme</th>
                <td>{{ list_type.Theme }}</td>
            </tr>
            <tr>
                <th>Status</th>
                {% if list_type.Status %}
                <td class="private-status">Private</td>
                {% endif %}
                {% if not list_type.Status %}
                    <td class="public-status">Public</td>
                {% endif %}
            </tr>
            <tr>
                <th>Date_ouvert</th>
                <td>{{ list_type.dateOuvert }}</td>
            </tr>
            <tr>
                <th>Date_fin</th>
                <td>{{ list_type.dateFin }}</td>
            </tr>
        </tbody>
    </table>
 <div>
        <a class="btn" style="background-color: #6c757d" href="{{ path('app_list_type_index') }}"><- back to list</a>

    <a class="btn" style="background-color: #ffc107" href="{{ path('app_list_type_edit', {'id': list_type.id}) }}">edit</a>

