{% extends 'head.html.twig' %}

{% block title %}ListType{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="mt-4">List shared</h1>
        {% if is_password_verified %}
            <table class="table table-bordered table-hover mt-4">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ list_type.id }}</td>
                </tr>
                <tr>
                    <th>Titre</th>
                    <td>{{ list_type.Titre }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ list_type.Description }}</td>
                </tr>
                <tr>
                    <th>Couverture</th>
                    <td><img src="{{ list_type.Couverture }}" alt="Couverture de la liste" class="img-fluid"></td>
                </tr>
                <tr>
                    <th>Theme</th>
                    <td>{{ list_type.Theme }}</td>
                </tr>
                </tbody>
            </table>

            <h1 class="mt-4">Gift Associated to this list</h1>

            <table class="table table-bordered table-hover mt-4">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Prix</th>
                    <th>Lien</th>
                </tr>
                </thead>
                <tbody>
                {% for gift in gifts %}
                    <tr>
                        <td>{{ gift.id }}</td>
                        <td>{{ gift.name }}</td>
                        <td>{{ gift.prix }}</td>
                        <td>{{ gift.lien }}</td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4">No records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {% endif %}
    </div>
{% endblock %}
