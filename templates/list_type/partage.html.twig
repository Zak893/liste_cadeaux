{% extends 'head.html.twig' %}

{% block title %}ListType{% endblock %}

{% block body %}
    <h1>List shared</h1>

    {% if list_type.status %}
        <div class="card-header mb-3">Please enter the password for this list</div>
        <form method="post" action="{{ path('app_partage_show', {'id': list_type.id}) }}">
            <div class="form_group">
                <div class="col-md-12 mb-3">
                    <input type="password" name="password">
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-8 col-md-offset-4" style="margin-top:5px;">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-btn fa-user"></i> Verify Password
                    </button>
                </div>
            </div>
        </form>
    {% endif %}

    {% if not list_type.status %} {# VÃ©rifier si le mot de passe est correct #}

        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ list_type.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ list_type.Titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ list_type.Description }}</td>
            </tr>
            <tr>
                <th>Couverture</th>
                <td>{{ list_type.Couverture }}</td>
            </tr>
            <tr>
                <th>Theme</th>
                <td>{{ list_type.Theme }}</td>
            </tr>
            </tbody>
        </table>


        <h1>Gift Associated to this list</h1>

        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Prix</th>
                <th>Lien</th>
            </tr>
            </thead>
            <tbody>
            {% for gift in gifts %}
                <tr>
                    <td>{{ gift.id }}</td>
                    <td>{{ gift.name }}</td>
                    <td>{{ gift.prix }}</td>
                    <td>{{ gift.lien }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}

{% endblock %}
