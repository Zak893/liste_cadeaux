{# templates/base.html.twig #}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link
            rel="stylesheet"
            href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
    />
    {% block stylesheets %}{% endblock %}
</head>
<body>
<nav
        class="navbar navbar-expand-lg navbar-light bg-light"
        style="height: 70px;"
>

    <div>{% if app.user %} Hey {{ app.user.name}} welcome back !!   {% endif %}</div>
    <div class="collapse navbar-collapse" id="navbarSupportedContent"></div>
    <ul style="
    display: inline-flex;
    list-style: none;
">
        {% if app.user and app.user.roles[0] == 'ROLE_USER' %}
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('list') }}">Create List</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('profile') }}">Profile</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('list_type') }}">My Lists</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_gift_index') }}">My Gifts</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_logout') }}">Logout</a>
                </li>
            {% endif %}
        {% if app.user and app.user.roles[0] == 'ROLE_ADMIN' %}
            <li class="nav-item">
                <a class="nav-link" href="{{ path('app_user_index') }}">Users</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ path('list_type') }}">Lists</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ path('app_gift_index') }}">Gifts</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ path('app_logout') }}">Logout</a>
            </li>
        {% endif %}

            {% if not app.user %}
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_login') }}">Login</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('register') }}">Register</a>
                </li>
            {% endif %}
    </ul>

</nav>
{% block body %}{% endblock %} {% block javascripts %}{% endblock %}
</body>
</html>